        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.ViewWindows.DataBinding"
        mc:Ignorable="d"
        Title="XMLAsResource" Height="450" Width="800">
